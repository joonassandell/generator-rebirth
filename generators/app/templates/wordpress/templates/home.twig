{% set template_class = 'Template--home' %}

{% extends "App.twig" %}

{% block content %}
  <div class="Container">
    <div class="Wrap">
      <div class="Grid">
        <div class="Grid-cell Width--8/12@m">
          <h1>{{ post.title }}</h1>
          <p>{{ post.content }}</p>
        </div>
        <div class="Grid-cell Width--4/12@m">
          <p>{{ _e('Just a sidebar.', 'app') }}</p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
